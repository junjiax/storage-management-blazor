@page "/register"
@layout AuthLayout
@inject NavigationManager Nav
@inject frontendblazor.Services.AuthApi AuthApi
@inject frontendblazor.Services.TokenStorage TokenStorage
@inject frontendblazor.Services.ApiAuthStateProvider AuthState

<div
    class="min-h-screen bg-gradient-to-br from-indigo-500 via-sky-500 to-purple-600 flex items-center justify-center px-4">
    <div
        class="w-full max-w-4xl bg-white/90 backdrop-blur-lg rounded-2xl shadow-2xl grid md:grid-cols-2 overflow-hidden">
        <!-- Panel trái: giới thiệu -->
        <div
            class="hidden md:flex flex-col justify-between bg-gradient-to-b from-indigo-600 to-purple-700 text-white p-8">
            <div>
                <h2 class="text-2xl font-semibold tracking-wide">Tạo tài khoản mới</h2>
                <p class="mt-2 text-sm text-indigo-100">
                    Tham gia hệ thống quản lý kho hàng để tối ưu công việc của bạn.
                </p>
            </div>

            <div>
                <h3 class="text-xl font-semibold mb-3">Lợi ích khi đăng ký ✨</h3>
                <ul class="space-y-2 text-sm text-indigo-100">
                    <li class="flex items-center gap-2">
                        <span class="inline-block w-2 h-2 rounded-full bg-emerald-300"></span>
                        Quản lý sản phẩm, đơn hàng tập trung
                    </li>
                    <li class="flex items-center gap-2">
                        <span class="inline-block w-2 h-2 rounded-full bg-emerald-300"></span>
                        Theo dõi tồn kho và nhập xuất nhanh chóng
                    </li>
                    <li class="flex items-center gap-2">
                        <span class="inline-block w-2 h-2 rounded-full bg-emerald-300"></span>
                        Báo cáo trực quan giúp ra quyết định dễ dàng
                    </li>
                </ul>
            </div>
        </div>

        <!-- Panel phải: form đăng ký -->
        <div class="p-8 md:p-10">
            <div class="mb-6 text-center md:text-left">
                <h1 class="text-2xl font-bold text-gray-900">Đăng ký</h1>
                <p class="mt-1 text-sm text-gray-500">
                    Tạo tài khoản mới để bắt đầu sử dụng hệ thống.
                </p>
            </div>

            @if (!string.IsNullOrEmpty(Error))
            {
                <div class="mb-4 rounded-lg border border-red-200 bg-red-50 px-3 py-2 text-sm text-red-700">
                    @Error
                </div>
            }

            @if (Registered)
            {
                <div class="rounded-2xl border border-emerald-200 bg-emerald-50 p-6 text-emerald-800 shadow-sm">
                    <div class="flex items-center gap-3">
                        <div class="flex h-10 w-10 items-center justify-center rounded-full bg-emerald-600 text-white">✓
                        </div>
                        <div>
                            <h2 class="text-lg font-semibold">Đăng ký thành công!</h2>
                            <p class="text-sm text-emerald-900/80">Sẽ chuyển đến trang đăng nhập trong giây lát...</p>
                        </div>
                    </div>
                    <div class="mt-4">
                        <a href="/login"
                            class="inline-flex items-center justify-center rounded-md bg-emerald-600 px-4 py-2 text-sm font-medium text-white hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-1">
                            Đăng nhập ngay
                        </a>
                    </div>
                </div>
            }
            else
            {
                <EditForm Model="@model" OnValidSubmit="HandleRegister">
                    <DataAnnotationsValidator />

                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Tên đăng nhập</label>
                            <InputText @bind-Value="model.Username"
                                class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                            <ValidationMessage For="@(() => model.Username)" class="mt-1 text-xs text-red-600" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Họ và tên</label>
                            <InputText @bind-Value="model.FullName"
                                class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                            <ValidationMessage For="@(() => model.FullName)" class="mt-1 text-xs text-red-600" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu</label>
                            <InputText @bind-Value="model.Password" type="password"
                                class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                            <ValidationMessage For="@(() => model.Password)" class="mt-1 text-xs text-red-600" />
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Xác nhận mật khẩu</label>
                            <InputText @bind-Value="model.ConfirmPassword" type="password"
                                class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
                            <ValidationMessage For="@(() => model.ConfirmPassword)" class="mt-1 text-xs text-red-600" />
                        </div>

                        <button type="submit"
                            class="w-full mt-2 inline-flex items-center justify-center rounded-lg bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-md transition hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-1">
                            Đăng ký
                        </button>
                    </div>
                </EditForm>
            }

            <p class="mt-6 text-center text-sm text-gray-600">
                Đã có tài khoản?
                <a href="/login" class="font-medium text-indigo-600 hover:text-indigo-500 hover:underline">
                    Đăng nhập
                </a>
            </p>
        </div>
    </div>
</div>

@code {
    private RegisterModel model = new();
    private string? Error;

    protected override async Task OnInitializedAsync()
    {
        var token = await TokenStorage.GetTokenAsync();
        if (!string.IsNullOrWhiteSpace(token))
        {
            Nav.NavigateTo("/");
        }
    }

    private async Task HandleRegister()
    {
        Error = null;

        if (model.Password != model.ConfirmPassword)
        {
            Error = "Mật khẩu xác nhận không khớp.";
            return;
        }

        var res = await AuthApi.RegisterAsync(new frontendblazor.Models.RegisterRequest(model.Username, model.Password,
        model.FullName));
        if (res is null || !res.Success || res.Data is null)
        {
            Error = res?.Message ?? "Username đã tồn tại hoặc dữ liệu chưa hợp lệ.";
            return;
        }
        Registered = true;
        StateHasChanged();
        _ = Task.Run(async () =>
        {
            await Task.Delay(2000);
            await InvokeAsync(() => Nav.NavigateTo("/login"));
        });
    }

    public sealed class RegisterModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Nhập username")]
        public string Username { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Nhập họ và tên")]
        [System.ComponentModel.DataAnnotations.MinLength(2, ErrorMessage = "Ít nhất 2 ký tự")]
        public string FullName { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Nhập mật khẩu")]
        [System.ComponentModel.DataAnnotations.MinLength(6, ErrorMessage = "Ít nhất 6 ký tự")]
        [System.ComponentModel.DataAnnotations.DataType(System.ComponentModel.DataAnnotations.DataType.Password)]
        public string Password { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Nhập xác nhận mật khẩu")]
        [System.ComponentModel.DataAnnotations.Compare(nameof(Password), ErrorMessage = "Mật khẩu xác nhận không khớp")]
        [System.ComponentModel.DataAnnotations.DataType(System.ComponentModel.DataAnnotations.DataType.Password)]
        public string ConfirmPassword { get; set; } = string.Empty;
    }

    private bool Registered { get; set; }
}
